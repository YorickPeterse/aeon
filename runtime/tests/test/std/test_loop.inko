import std::loop::(self as loop_mod)
import std::test::*

def tests(t: ref Tests) {
  t.group('std::loop.repeat') do (g) {
    g.test('Repeating a loop a fixed number of times') {
      let mut iters = 0

      loop_mod.repeat(4) do (index) { iters = index }

      try assert_equal(iters, 3)
    }
  }
}
