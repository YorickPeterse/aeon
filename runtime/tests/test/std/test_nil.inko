import std::test::*

def tests(t: ref Tests) {
  t.group('std::nil::NilType.truthy?') do (g) {
    g.test('Checking if a Nil is truthy') {
      try assert_false(Nil.truthy?)
    }
  }

  t.group('std::nil::NilType.clone') do (g) {
    g.test('Cloning a Nil') {
      let a = Nil
      let b = a.clone

      try assert_equal(a, b)
    }
  }
}
